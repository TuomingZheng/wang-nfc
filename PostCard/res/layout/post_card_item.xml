<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/post_card_item_selector"
    android:gravity="center_vertical"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="16dp" >

    <ImageView
        android:id="@+id/contact_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/contact_input_to_nfc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_weight="1.0"
        android:clickable="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/nfc_sync_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nfc_sync_selector"
            android:src="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/post_card_insert_into_nfc"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/contact_icon"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:button="@drawable/check_box_selector"
        android:paddingRight="10dp" />

</LinearLayout>